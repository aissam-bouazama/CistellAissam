@model List<Producte>
@{
    ViewData["title"] = "Botiga Cistell";

}
@section Css {
    
    <style>
        .productes {
            display: inline-grid;
            width: 80%;
            margin-left:auto;
			margin-right: auto;
            justify-content: center;
            align-items: center;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            font-family: 'Courier New';
   
        }
        
    </style>
}
@{
   
     
    <div class="productes">
   
    @foreach (var product in Model){
            <figure class="figure col mb-5" style="text-align:center; ">
                <img width="300" height="300" src="/imatgesProductes/productes/@product.imatgeproducte" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
                <figcaption class="figure-caption">@product.nomProducte <br /><b>@product.preuProducte €</b></figcaption>
                <form asp-controller="Cistell" asp-action="Actualitzar" method="post">
                        <input type="hidden" name="codeproducte" value="@product.codiProducte"/>
                <input id="btn-afegir" class="btn btn-outline-secondary fa" type="submit" value="Afegir a Cesta"/>
                <button type="submit" class="btn btn-outline-secondary fa" id="btn-update"><i class="fa-solid fa-arrows-rotate"></i></button>
					<button type="submit" asp-action="EsborrarProducte" asp-controller="Cistell" class="btn btn-outline-danger fa" id="btn-delete"><i class="fa-solid fa-trash"></i></button>
                </form>
                 
       </figure>
          
    }

       

            
        


 </div>
}

@section Scripts {
	<script>
        document.addEventListener('click',(e)=>{
            if(e.target.matches("#btn-afegir")){
				
				e.preventDefault();
				fetch("/Cistell/Afegir", {
					method: "POST",
					body:new FormData(e.target.form),
                }).then(response => response.json()).then(res=>document.getElementById("contador").innerText = res.contador);
            }
        })
    </script>
}
