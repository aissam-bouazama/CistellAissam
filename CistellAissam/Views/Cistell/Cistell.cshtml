@model List<Producte>
@{
    ViewData["title"] = "Botiga Cistell";

}
@section Css {
    <style>
        .productes {
            display: inline-grid;
            width: 80%;
            margin-left:auto;
			margin-right: auto;
            justify-content: center;
            align-items: center;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
   
        }
    </style>
}
@{
   
     
    <div class="productes">
   
    @foreach (var product in Model){
            <figure class="figure col mb-5" style="text-align:center; ">
                <img width="300" height="300" src="/imatgesProductes/@product.imatgeproducte" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
                <figcaption class="figure-caption">@product.nomProducte <br /><b>@product.preuProducte €</b></figcaption>
                <form asp-controller="Cistell" asp-action="Afegir" method="post">
                        <input type="hidden" name="codeproducte" value="@product.codiProducte"/>
                <input class="btn btn-outline-secondary" type="submit" value="Afegir a Cesta"/>
                </form>
                 
       </figure>
          
    }


 </div>
}

