@model Producte

@{
	ViewData["title"] = "Actualitzar Producte";
}
@section Css {
	<style>
        .modal-dialog {
			margin-top: 500px;
        }
    </style>
}
@{
    <div class="modal-dialog modal-dialog-centered  d-flex ">
        <div class="modal-content w-75">
            <div class="modal-body p-5">
                <form asp-controller="Cistell" asp-action="ActualitzarProducte">
                    <div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="nomProducte">Nom del Producte:</label>
                            <input type="text" asp-for="nomProducte" name="nomProducte" class="form-control" />
							<span class="text-danger" asp-validation-for="nomProducte"></span><br />
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="preuProducte">preu del Producte:</label>
                            <input class="form-control" type="number" asp-for="preuProducte" name="preuProducte" />
                            <span class="text-danger" asp-validation-for="preuProducte"></span><br />
                        </div>
                        <div class="form-outline mb-4">
                            <input type="hidden" asp-for="codiProducte" name="codiProducte" class="form-control" />
                            <input type="hidden" asp-for="imatgeproducte" name="imatgeproducte" />
                            </div>
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary"><i class="fa-solid fa-pen"></i>Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}